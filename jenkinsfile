#!groovy

def generateAllure() {
    allure([
            includeProperties: true,
            jdk              : '',
            properties       : [],
            reportBuildPolicy: 'ALWAYS',
            results          : [[path: 'build/allure-results']]
    ])
}

/** jenkins declarative pipeline */
pipeline {
    agent any

    tools {
        gradle '8.4'
    }

    stages {
        stage('Git') {
            steps {
                git url: 'https://github.com/RamKotto/ApiTests.git',
                        branch: "${BRANCH_NAME}"
            }
        }

        stage('Tests') {
            steps {
                sh "/opt/gradle/gradle-8.4/bin/gradle cleanTest ${TASK}"
            }
        }

        stage('Allure') {
            steps {
                generateAllure()
            }
        }
    }
}
